<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.seller.FormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tb_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/title_form"
            app:navigationIconTint="?colorOnSurface"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_seller_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="Karer ati"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/atv_seller_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                />


        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_form_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:padding="8dp"
                app:tint="?colorOnSurface"
                android:src="@drawable/baseline_add_a_photo_24"
                android:layout_weight="0.5"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_auto_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Avtomobil nomeri: 95A123KA"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_auto_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textCapCharacters"
                        />


                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_carrier_auto_brand"
                    android:layout_width="match_parent"
                    android:hint="Avtomobil modeli"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_carrier_auto_brand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:inputType="textCapWords"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>






        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_carrier_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="Júk tasıwshı atı"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_carrier_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapWords"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_carrier_phone"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:hint="Júk tasıwshı telefon nomeri"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            app:prefixText="+998">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_carrier_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:maxLength="9"
                />


        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Hújjet túri"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/atv_document_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none"
                    android:maxLength="9"
                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_passport_series"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Seriyası: AA12345"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_passport_series"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textCapCharacters"
                    />


            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Júk túri"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/atv_cargo_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none"
                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cargo_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Ju'k shiqqan sa'ne"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cargo_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    />


            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>





        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Ja'riyma tu'ri"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/at_violation_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_custom_reason"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Toliqraq (ma'jbu'riy emes)"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_custom_reason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapSentences"
                />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="8dp"
            android:text="@string/title_send_form"/>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>