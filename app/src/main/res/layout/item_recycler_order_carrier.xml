<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/shape_item_recycler_order"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/gradient_pink_dark"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/shape_car_number"
            android:orientation="horizontal"
            android:weightSum="5">


            <TextView
                android:id="@+id/tv_car_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/shape_car_number_country_code"
                android:maxLines="1"
                android:paddingHorizontal="4dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="?textAppearanceBody1"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="95" />

            <TextView
                android:id="@+id/tv_car_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textAppearance="?textAppearanceBody1"
                android:textColor="@color/black"
                tools:text="A123AA" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/flag_of_uzbekistan"
                    />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_time_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?textAppearanceBody2"
            tools:text="@tools:sample/date/hhmm" />

        <TextView
            android:id="@+id/tv_time_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textAppearance="?textAppearanceBody1"
            android:textColor="@color/white"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/baseline_calendar_month_24"
            app:drawableTint="@color/white"
            tools:text="@tools:sample/date/ddmmyy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textAppearance="?textAppearanceBodyLarge"
            tools:text="@tools:sample/full_names" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Júk:"
                    android:textAppearance="?textAppearanceBody2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_cargo_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceBody2"
                    tools:text="Sheben" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Muǵdarı:"
                    android:textAppearance="?textAppearanceBody2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_cargo_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceBody2"
                    tools:text="1500 KG" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>